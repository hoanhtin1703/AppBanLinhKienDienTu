<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/non"
    tools:context=".Activity.ThongTinKhachHangActivity">
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/boder"
    android:layout_marginTop="80dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="80dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="30dp"
        android:text="Thông tin khách hàng"
        android:textColor="#0a0a0a"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="#FFFFFF"
            android:layout_margin="5dp"
            android:id="@+id/edittextTenKH"
            android:inputType="text"
            android:hint="Nhập tên khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="#FFFFFF"
            android:layout_margin="5dp"
            android:id="@+id/edittextSdt"
            android:inputType="phone"
            android:hint="Nhập số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="#FFFFFF"
            android:layout_margin="5dp"
            android:id="@+id/edittextEmail"
            android:inputType="textEmailAddress"
            android:hint="Nhập email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:background="#FFFFFF"
            android:layout_margin="5dp"
            android:id="@+id/edittextDiachi"
            android:inputType="text"
            android:hint="Nhập địa chỉ nhận hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<Button
    android:backgroundTint="#00CCFF"
    android:layout_marginRight="70dp"
    android:textColor="#FFFFFF"
    android:textSize="15sp"
    android:padding="10dp"
    android:id="@+id/buttonXacnhan"
    android:text="Xác nhận"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
        <Button
            android:backgroundTint="@color/purple_200"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:padding="10dp"
            android:id="@+id/buttonTrove"
            android:text="Trở về"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>