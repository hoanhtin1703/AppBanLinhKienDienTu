<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChiTietSanPham">
    <androidx.appcompat.widget.Toolbar
        android:background="#8A2BE2"
        android:id="@+id/tootlbarChiTietSanPham"
        app:title="Chi tiết sản phẩm"
        app:titleTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageChiTietSanPham"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="180dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="210dp">
            <TextView
                android:id="@+id/texviewTenChiTietSanPham"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Tên sản phẩm:"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:id="@+id/texviewGiaChiTietSanPham"
                android:text="Giá sản phẩm: "
                android:textColor="#f20"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textColor="#FF0000"
                    android:focusable="false"
                    android:text="-"
                    android:id="@+id/buttonTru"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#00FF00"
                    android:focusable="false"
                    android:text="1"
                    android:id="@+id/buttonValues"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:textColor="#FF0000"
                    android:focusable="false"
                    android:text="+"
                    android:id="@+id/buttonCong"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/buttonAddCart"
                android:textColor="#b6a035"
                android:layout_marginLeft="20dp"
                android:text="Thêm giỏ hàng"
                android:textSize="15sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#77ae45"
            android:layout_marginLeft="85dp"
            android:text="Mô tả sản phẩm"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:id="@+id/textViewMotaCTSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>